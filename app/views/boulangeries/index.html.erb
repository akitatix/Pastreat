

<div class="glide">
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
      <% lol = 0 %>
      <% @boulangeries.each do |x|   %>
          <li style="" class="bg h-full position_relative" data-boulangerie-id="<%= x.id %>">
            <div data-geolocation>
              <img src="https://cdn2.iconfinder.com/data/icons/dark-action-bar-2/96/refresh-512.png" class="bakery-bg" alt="">
              <h1 class="fin loc"></h1>
              <p class="pos position"> <%= x.position %></p>
              <div id="container-buttons">
                <% if user_signed_in? %>
                  <a reserv href="">
                    <div class="home-buttons_reserved">Reserver</div>
                  </a>
                <% end %>
                <a fino href="">
                  <hr>
                    <%= link_to "GO", visit_boulangery_path(x), remote: true, method: :post, :class => "home-buttons_go" %>
                  <hr>
                </a>
              </div>
            </div>
            <div class="badge">
            </div>
            <% if x.average_rating != nil  %>
              <h2> <%= x.average_rating.round(2) %></h2>
            <% end  %>
            <div class="names">
              <h2 class="name"></h2>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
</div>


